#include <stdio.h>
#include <string.h>

int checkPalindrome(char str[]) {
    int left = 0;
    int right = strlen(str) - 1;

    while(left < right) {
        if(str[left] != str[right]) {
            return 0; 
        }
        left++;
        right--;
    }
    return 1;
}

int main() {
    char word[100];

    printf("Enter string: ");
    scanf("%s", word);

    if(checkPalindrome(word)) {
        printf("%s is a palindrome.\n", word);
    } else {
        printf("%s is not a palindrome.\n", word);
    }

    return 0;
}
